path /leadership-award/{year}/{user_id} {
  read() { isUser(user_id) }
  write() { isUser(user_id) }
}

path /users/{user_id} {
  read() { isUser(user_id) }
  write() { isUser(user_id) }
}

path / {
  read() { isAdmin() }
  write() { isAdmin() }
}

function isAdmin() {
  auth.token.isAdmin === true
}

function isUser(uid) {
 auth.uid === uid 
}